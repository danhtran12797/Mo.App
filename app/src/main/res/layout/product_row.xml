<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="product"
            type="com.thd.danhtran12797.moapp.models.Product" />
        <variable
            name="productInterface"
            type="com.thd.danhtran12797.moapp.adapters.ProductAdapter.ProductInterface" />
    </data>

    <RelativeLayout
        android:onClick="@{()->productInterface.onItemClick(product)}"
        android:background="?attr/selectableItemBackground"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:layout_above="@+id/nameProductTextView"
            app:cardCornerRadius="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/productImageView"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@drawable/image_cate"
                android:productImage="@{product.image}" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:gravity="center"
            android:id="@+id/nameProductTextView"
            android:layout_above="@+id/specTextView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{product.name}"
            tools:text="Băng keo trong - 50 mic" />

        <TextView
            android:gravity="center"
            android:id="@+id/specTextView"
            android:text="@{product.spec}"
            tools:text="Qui cách: 4F8* 100Y (90 mét)"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
    </RelativeLayout>
</layout>
